{
    "name": "aelfannir/doctrine-query-paginator",
    "description": "Simple, powerful package for search, sort, filter & paginate database",
    "type": "symfony-bundle",
    "license": "MIT",
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "App\\Tests\\": "tests/",
            "App\\": "src/",
            "AElfannir\\DoctrineQueryPaginator\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Elfannir",
            "email": "aelfannir@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "doctrine/orm": "^2.7",
        "doctrine/doctrine-bundle": "^2.4",
        "symfony/flex": "^1.3.1",
        "symfony/console": "5.3.*",
        "symfony/yaml": "5.3.*",
        "guzzlehttp/guzzle": "^7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/browser-kit": "5.3.*",
        "symfony/css-selector": "5.3.*",
        "symfony/phpunit-bridge": "5.3.*",
        "symfony/maker-bundle": "^1.20"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    }
}
